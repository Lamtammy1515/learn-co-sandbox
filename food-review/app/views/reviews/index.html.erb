
<h1 style="font-size:40px" class="welcome">Welcome back to The Daily Food Reviews!</h1>
<button><a href="/reviews/new">Create a Review</a></button>
<% @review.each do |r| %>
<h2 style="font-family:'Courier New'"><a href="/reviews/<%=r.id%>"><%= r.title%></a></h2>
<h4 style="font-family:'Courier New'">Restaurant: "<%= r.restaurant%>"</h4>
<h4 style="font-family:'Courier New'">Location: "<%=r.location%>"</h4>
<h4 style="font-family:'Courier New'">Star Rating: <%= r.star_rating%></h4>
<p style="font-family:'Courier New'"><%= r.review%></p>
<img src="<%= r.image%>" alt="review">
<% if current_user == r.user %>
<button><a href="/reviews/<%=r.id%>/edit">Edit</a></button>
<% end %>
<%end%>