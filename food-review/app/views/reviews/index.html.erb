

<div class="header">
<u><h1>The Daily Food Reviews!</h1></u> 
</div>
</br>
</br>

<% @review.each do |r| %>

<div class="header2">
  <h2 style="font-family:'Courier New'"><a href="/reviews/<%=r.id%>"><%= r.title%></a></h2>
  </div>
  

  <h4 style="font-family:'Courier New'" class="center">Restaurant: "<%= r.restaurant%>"</h4>
  <img src="<%= r.image%>" alt="review" class="center">
  
  <% if current_user == r.user %>
    <button class="center"><a href="/reviews/<%=r.id%>/edit">Edit</a></button>
  <% end %>
  
<%end%>
